// Keep your models the same, but let's add the 'calories' target to User
model User {
  id             String   @id @default(uuid())
  name           String
  height         Float
  weight         Float
  age            Int
  gender         String
  activityLevel  String
  dietPreference String
  calorieTarget  Int      @default(2000) // NEW: Stores their daily target
  createdAt      DateTime @default(now())
  cycles         Cycle[]
  logs           DailyLog[]
}

// ... Keep Cycle and DailyLog models exactly as they were ...
model Cycle {
  id        String   @id @default(uuid())
  userId    String
  startDate DateTime @default(now())
  endDate   DateTime
  goal      String
  schedule  String   // JSON
  isActive  Boolean  @default(true)
  user      User     @relation(fields: [userId], references: [id])
}

model DailyLog {
  id           String   @id @default(uuid())
  userId       String
  date         DateTime @default(now())
  workoutDone  Boolean  @default(false)
  dietFollowed Boolean  @default(false)
  steps        Int      @default(0)
  dietCost     Float    @default(0)
  user         User     @relation(fields: [userId], references: [id])
}